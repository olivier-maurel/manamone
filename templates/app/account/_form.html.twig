{{ form_start(form) }}
    <div class="body-content" style="max-width: 700px;">
        <div class="form-group mb-5">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_label(form.name) }}
                    <div class="input-group">
                        {{ form_widget(form.name) }}
                        <span class="input-group-append">
                            <button id="iconpicker" class="btn btn-outline-secondary" data-icon="{{ account.icon }}"  role="iconpicker"></button>
                        </span>
                        <span class="input-group-append">
                            {{ form_widget(form.color) }}
                        </span>
                    </div>
                </div>
            </div>
            {{ form_row(form.description) }}
            {{ form_row(form.currency) }}
        </div>
        <button class="btn btn-success d-block m-auto">{{ button_label|default('Ajouter') }}</button>
    </div>
{{ form_end(form) }}
<a href="{{ path('app_account_index') }}" class="btn btn-secondary">Retour</a>