{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ account.description }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ account.icon }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ account.color }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ account.modifiedAt ? account.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_index') }}">back to list</a>

    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>

    {{ include('app/account/_delete_form.html.twig') }}
{% endblock %}
